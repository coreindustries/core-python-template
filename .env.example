# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app  # pragma: allowlist secret

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================

# Redis connection string
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Configuration
# =============================================================================

# Debug mode (set to false in production)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application environment: development, staging, production
ENVIRONMENT=development

# =============================================================================
# API Configuration
# =============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Security
# =============================================================================

# Secret key for JWT/sessions (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Forensic Security Logging
# =============================================================================

# Use JSON structured logging (recommended for production log aggregation)
LOG_JSON=true

# Log file path (optional - logs to stdout if not set)
# LOG_FILE=logs/app.log

# Log file rotation settings
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10

# Mask sensitive data in logs (passwords, tokens, etc.)
LOG_MASK_SENSITIVE=true

# Log request/response bodies (WARNING: may contain PII - use with caution)
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false

# =============================================================================
# Metrics Configuration
# =============================================================================

# Enable Prometheus metrics collection
METRICS_ENABLED=true

# Prefix for all metric names
METRICS_PREFIX=project_name

# =============================================================================
# Observability & Monitoring (Docker Compose)
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin  # Change in production

# Loki (Log aggregation)
LOKI_PORT=3100

# Jaeger (Distributed tracing)
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318

# =============================================================================
# Docker Compose Configuration
# =============================================================================

# Compose project name (used for container naming)
COMPOSE_PROJECT_NAME=app

# Database ports
POSTGRES_PORT=5432
REDIS_PORT=6379

# Database credentials (development only)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres  # pragma: allowlist secret
POSTGRES_DB=app

# =============================================================================
# External Services (add as needed)
# =============================================================================

# Example: AWS credentials
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
